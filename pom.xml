<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>e-geos</groupId>
  <artifactId>dcs-sar-flood-tool</artifactId>
  <packaging>pom</packaging>
  <name>dcs-sar-flood-tool</name>
  <parent>
    <groupId>com.terradue</groupId>
    <artifactId>dcs-python-parent</artifactId>
    <version>2.0.0</version>
  </parent>
  <description>This application will extract a series of flood extent maps from a stack of interferometric S-1 data.</description>
  <version>1.1-SNAPSHOT</version>
  <properties>
    <summary>Flood extraction from S-1 data</summary>
    <description>This application will extract a series of flood extent maps from a stack of interferometric S-1 data.</description>
    <community>geohazards-tep</community>
    <yumRepo>geohazards-tep</yumRepo>
  </properties>
  <scm>
    <connection>scm:git:ssh://git@github.com/geohazards-tep/dcs-sar-flood-tool</connection>
    <developerConnection>scm:git:ssh://git@github.com/geohazards-tep/dcs-sar-flood-tool</developerConnection>
    <url>https://github.com/geohazards-tep/dcs-sar-flood-tool</url>
    <tag>HEAD</tag>
  </scm>
  <profiles>
    <profile>
      <id>package-app</id>
      <activation>
        <property>
          <name>env</name>
          <value>ci</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>rpm-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-rpm</id>
                <goals>
                  <goal>rpm</goal>
                </goals>
                <configuration>
                  <!-- Set here the dependencies installed with 'sudo yum install'-->
                  <requires>
                    <require>miniconda</require>
                    <require>openjpeg2</require>
                    <require>snap</require>
                  </requires>
                  <postinstallScriptlet combine.children="append">
                    <script>conda update conda -y &amp;&amp; conda install -y --file /application/dependencies/python/packages.list</script>
                  </postinstallScriptlet>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
